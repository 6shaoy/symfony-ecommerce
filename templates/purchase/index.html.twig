{% extends "base.html.twig" %}

{% block title %}
	Mes Commandes
{% endblock %}

{% block body %}
	<h1>Mes Commandes</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Numero</th>
				<th>Address</th>
				<th>Date de commande</th>
				<th>Produits</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
            {% for p in purchases %}
                <tr>
                    <td>{{ p.id }}</td>
                    <td>
                        {{ p.address }}<br>
                        {{ p.city }}, {{p.postalCode }}
                    </td>
                    <td>{{ p.purchaseAt | date('d/m/y H:m')}}</td>
					<td>
						<ul>
							{% for item in p.purchaseItems %}
								<li>{{ item.quantity }} x {{ item.productName }} ({{ item.total / 100 }} &euro;)</li>
							{% endfor %}
						</ul>
					</td>
                    <td>{{ p.total }}</td>
                </tr>
            {% endfor %}
		</tbody>
	</table>
{% endblock %}
